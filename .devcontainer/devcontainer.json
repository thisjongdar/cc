{
  "name": "Codespace Command Executor",

  "image": "mcr.microsoft.com/devcontainers/base:bookworm",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "forwardPorts": [3000],

  "postCreateCommand": "npm install",

  "postStartCommand": "nohup npm run dev > server.log 2>&1 &",

  "portsAttributes": {
    "3000": {
      "label": "Command API",
      "onAutoForward": "notify"
    }
  }
}
